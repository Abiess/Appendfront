<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activities.NewItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the Secondname"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:id="@+id/tvNewTask"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/etNewTask"
            android:layout_below="@+id/tvNewTask"
            android:layout_alignParentStart="true"
            android:textColorHint="#B8BFC2"

            android:hint="@string/enter_task_here"
            android:layout_alignParentLeft="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter The firstname plz "
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="100dp"
            android:id="@+id/firstnameT"
            android:layout_alignParentTop="true"

            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/firstnameE"
            android:layout_below="@+id/firstnameT"
            android:layout_alignParentStart="true"
            android:textColorHint="#B8BFC2"

            android:hint="@string/enter_task_here"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Is Payed For yassine ? "
            android:textSize="15sp"
            android:layout_marginTop="70dp"
            android:id="@+id/payedforyassine"
            android:layout_below="@+id/firstnameT"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Ispayedforyassine"
            android:layout_below="@+id/payedforyassine"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:prompt="@string/priority_prompt"
            android:spinnerMode="dropdown"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Is Payed For Abdellah ? "
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:id="@+id/payedforabdellah"
            android:layout_below="@+id/Ispayedforyassine"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Ispayedforabdellah"
            android:layout_below="@+id/payedforabdellah"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:prompt="@string/priority_prompt"
            android:spinnerMode="dropdown"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Price of Code ? "
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:id="@+id/codePrice"
            android:layout_below="@+id/Ispayedforabdellah"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/codePriceSpinner"
            android:layout_below="@+id/codePrice"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:prompt="@string/priority_prompt"
            android:spinnerMode="dropdown"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="our Price (Do Not Fill It) "
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:id="@+id/bill"
            android:layout_below="@+id/codePriceSpinner"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/BillE"
            android:cursorVisible="false"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:paddingTop="8sp"
            android:layout_below="@+id/codePriceSpinner"

            tools:ignore="TextFields"
            android:layout_alignParentRight="true"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/btnSend"
                android:layout_below="@+id/BillE"
                android:layout_marginTop="10dp"
                android:onClick="send" />




    </RelativeLayout>
</ScrollView>